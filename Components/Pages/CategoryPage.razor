@page "/category/{Id:int}"
@using Microsoft.IdentityModel.Tokens
@inject ICategoryService categoryService
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<h3>Category</h3>
<AuthorizeView>
    <MudButton Href="/posts/new" StartIcon="@Icons.Material.Filled.AddToQueue">Opret nyt opslag</MudButton>
</AuthorizeView>
@if (ShowCategory != null)
{
    <h2>@ShowCategory.Title</h2>
    <p>@posts?.Count</p>
    <table class="table table-hover bg-white">
        <thead>
        <tr>
            <th scope="col">Kategori</th>
            <th scope="col">Indhold</th>
            <th scope="col">Oprettet</th>
            <th scope="col">Redigeret</th>
            <th scope="col" class="text-center">
                <i class="bi bi-gear-fill"></i>
            </th>
        </tr>
        </thead>
        <tbody>
        @if (!posts.IsNullOrEmpty())
        {
            @foreach (var post in posts)
            {
                <tr @onclick="@(() => OnRowClick())" style="cursor: pointer">
                    <td>@post.Title</td>
                    <td>@post.Content</td>
                    <td>@post.DateCreated</td>
                    <td>@post.DateEdited</td>
                    <td>
                        <MudButton OnClick="OnRowClick"
                                   StartIcon="@Icons.Material.Filled.FileOpen"></MudButton>
                    </td>

                </tr>
            }
        }
        else
        {
            <MudText Typo="Typo.body2">Ingen opslag endnu..</MudText>
        }
        </tbody>
    </table>
}
else
{
    <p>Category not found.</p>
}

@code {
    [Parameter] public int Id { get; set; }
    private Model.Category ShowCategory;
    private List<Post>? posts;

    // TODO implement post component
    private void OnRowClick()
    {
        navigationManager.NavigateTo("/");
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            ShowCategory = await categoryService.GetCategoryByIdAsync(Id);
            posts = ShowCategory?.Posts ?? new List<Post>();
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            posts = new List<Post>();
        }
    }

}