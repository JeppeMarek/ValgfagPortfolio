@page "/"
@using Microsoft.IdentityModel.Tokens
@rendermode InteractiveServer
@inject ICategoryService categoryService
<PageTitle>Jeppe Marek Portfolio</PageTitle>
<BreadCrumbComponent Items="breadcrumbItems"></BreadCrumbComponent>
<MyInformation></MyInformation>
<MudDivider></MudDivider>
<WeekCalender></WeekCalender>
<MudDivider></MudDivider>

<AuthorizeView>
    <Authorized>
        <MudButton Size="Size.Large" Href="/category/new/" StartIcon="@Icons.Material.Filled.AddBox">Tilføj ny
            kategori
        </MudButton>
    </Authorized>
</AuthorizeView>
<br/>
@if (!categories.IsNullOrEmpty())
{
    <MudText Typo="Typo.h4" Class="mt-4 mb-2">Alle overkategorier</MudText>
    <MudGrid Spacing="2">
        @foreach (var cat in parentCategories)
        {
            <MudItem xs="12" sm="6" lg="4">
                <CategoryComponent SelectedCategory="@cat"></CategoryComponent>
            </MudItem>
        }
    </MudGrid>

    <MudText Typo="Typo.h4" Class="mt-6 mb-2">Alle underkategorier</MudText>
    <MudGrid Spacing="2">
        @foreach (var cat in categories.Where(c => c.ParentCategoryId.HasValue))
        {
            <MudItem xs="12" sm="6" lg="4">
                <CategoryComponent SelectedCategory="@cat"></CategoryComponent>
            </MudItem>
        }
    </MudGrid>
}
else
{
    <MudCard>
        <MudSkeleton Height="50" Width="75" Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle"/>
        <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text"/>
    </MudCard>
    <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Warning">Ingen kategorier</MudText>
    <MudCard/>
}
