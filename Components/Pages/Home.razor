@page "/"
@using Microsoft.IdentityModel.Tokens
@rendermode InteractiveServer
@inject ICategoryService categoryService

<PageTitle>Jeppe Marek Portfolio</PageTitle>
<header>Jeppe Marek Portfolio</header>

<AuthorizeView>
    <Authorized>
        <MudNavLink Href="/category/new"
                    Icon="@Icons.Material.TwoTone.AddCircle"
                    IconColor="Color.Primary">
            Ny Kategori
        </MudNavLink>
    </Authorized>
</AuthorizeView>

<br/>
<MudGrid Justify="Justify.Center" Spacing="10">
    @if (!categories.IsNullOrEmpty())
    {
        foreach (var cat in categories)
        {
            <MudItem>
                <CategoryComponent Category=@cat></CategoryComponent>
            </MudItem>
        }
    }
    else
    {
        <MudText>Ingen kategorier fundet</MudText>
    }
</MudGrid>