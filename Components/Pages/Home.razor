@page "/"
@using Microsoft.IdentityModel.Tokens
@rendermode InteractiveServer
@inject ICategoryService categoryService

<PageTitle>Jeppe Marek Portfolio</PageTitle>
<AuthorizeView>
    <Authorized>
        <MudButton Href="/category/new/" StartIcon="@Icons.Material.Filled.AddBox">Tilføj ny kategori</MudButton>
    </Authorized>
</AuthorizeView>

<br/>
<MudGrid>
    @if (!categories.IsNullOrEmpty())
    {
        foreach (var cat in categories)
        {
            <MudItem sm="5">
                <CategoryComponent SelectedCategory=@cat></CategoryComponent>
            </MudItem>
        }
    }
    else
    {
        <MudText>Ingen kategorier fundet</MudText>
    }
</MudGrid>