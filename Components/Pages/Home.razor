@page "/"
@using Microsoft.IdentityModel.Tokens
@attribute [StreamRendering]
@inject ICategoryService categoryService
<BreadCrumbComponent Items="breadcrumbItems"></BreadCrumbComponent>
<PageTitle>Jeppe Marek Portfolio</PageTitle>
<AuthorizeView>
    <Authorized>
        <MudButton Size="Size.Large" Href="/category/new/" StartIcon="@Icons.Material.Filled.AddBox">Tilføj ny
            kategori
        </MudButton>
    </Authorized>
</AuthorizeView>
<MudGrid>
    <br/>
    @if (!categories.IsNullOrEmpty())
    {
        foreach (var cat in categories)
        {
            <MudItem sm="5">
                <CategoryComponent SelectedCategory=@cat></CategoryComponent>
            </MudItem>
        }
    }
    else
    {
        <MudCard>
            <MudSkeleton Height="50" Width="75" Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle"/>
            <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Text"/>
        </MudCard>
        <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Warning">Indlæser</MudText>
        <MudCard/>
    }
</MudGrid>
